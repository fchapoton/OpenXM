#!/bin/sh
## $OpenXM: OpenXM/src/ox_math/configure,v 1.2 1999/12/15 05:40:21 ohara Exp $

lnx () {
	if [ -h Makefile ]; then
		rm Makefile
	fi
	ln -s Makefile.$1 Makefile
}

case `uname` in
Linux)
	lnx linux
	;;
OSF1)
	lnx OSF1
	;;
SunOS)
	if [ -d /kernel ]; then
		lnx solaris
	fi
	;;
*)
	;;
esac

exit 0
