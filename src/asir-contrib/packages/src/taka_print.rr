def taka_tex_symbol(S) {
  R = taka_is_indexed(S);
  if (R[0]) {
    return taka_tex_symbol_(R[1])+"_{"+R[2]+"}";
  }
  return taka_tex_symbol_(R[1]);
}

def taka_tex_symbol_(S) {
  extern Tex_symbol_table;
  extern Tex_symbol_table;
  extern Taka_print_tex_table;
   
  N = length(Taka_print_tex_table);
  /* Linear search for now*/
  for (I=0; I<N; I++) {
    if (S == Taka_print_tex_table[I][0]) {
       return Taka_print_tex_table[I][1];
    }
  }

  N = size(Tex_symbol_table)[0];
  /* Linear search for now*/
  for (I=0; I<N; I++) {
    if (S == Tex_symbol_table[I][0]) {
       return Tex_symbol_table[I][1];
    }
  }
  return S;
}

