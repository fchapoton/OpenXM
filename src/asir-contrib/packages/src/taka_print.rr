def taka_print_output(Obj,F,Mode) {
  S = taka_terminal_form(Obj);
  if (type(F) != 7) {
    error("taka_print_output(Obj, Filename, Mode): Filename must be a string.");
    return;
  }
  if (Mode == "w") {
    Fd = open_file(F,"w");
  }else {
    Fd = open_file(F,"a");
  }
  if (Fd < 0) {
    error("Failed to open the file "+rtostr(F));
    return ;
  }
  S2 = strtoascii(S);
  N = length(S2);
  for (I=0; I<N; I++) {
    put_byte(Fd,S2[I]);
  }
  close_file(Fd);
}
