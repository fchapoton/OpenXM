  }
  shell(" xv "+F[1]+"."+Format+" &");
  return F;
}

def taka_input_form(S) {
  A = 0;
  if (type(S) == QUOTE) {
    A = quote_input_form(S);
  }
  else if (type(S) == STRUCT) {
    if (struct_type(S) == POLY_FACTORED_POLYNOMIAL) {
       A = taka_poly_input_form_poly_factored_polynomial(S);
    }else if (struct_type(S) == POLY_FACTORED_RATIONAL) {
