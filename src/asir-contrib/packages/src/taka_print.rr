  }else
  if (S[0] == "&&") {
    T = cdr(S);
    A += taka_oma_basic("and");
    A += taka_xml_basic_form_quote_list(T[0]);
    A += taka_xml_basic_form_quote_list(T[1]);
    A += taka_end_oma();
  }else
  if (S[0] == "||") {
    T = cdr(S);
    A += taka_oma_basic("or");
    A += taka_xml_basic_form_quote_list(T[0]);
    A += taka_xml_basic_form_quote_list(T[1]);
    A += taka_end_oma();
  }else
  if (S[0] == "<" || S[0] == "@<") {
    T = cdr(S);
    A += taka_oma_basic("less");
    A += taka_xml_basic_form_quote_list(T[0]);
    A += taka_xml_basic_form_quote_list(T[1]);
    A += taka_end_oma();
  }else
  if (S[0] == ">" || S[0] == "@>") {
    T = cdr(S);
    A += taka_oma_basic("greater");
    A += taka_xml_basic_form_quote_list(T[0]);
    A += taka_xml_basic_form_quote_list(T[1]);
    A += taka_end_oma();
  }else
  if (S[0] == "<=" || S[0] == "@<=") {
    T = cdr(S);
    A += taka_oma_basic("lessequal");
    A += taka_xml_basic_form_quote_list(T[0]);
    A += taka_xml_basic_form_quote_list(T[1]);
    A += taka_end_oma();
  }else
  if (S[0] == ">=" || S[0] == "@>=") {
