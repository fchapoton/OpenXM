/* alpha123 --> [1,"alpha",123] 
   alpha    --> [0,"alpha"]
*/
def taka_is_indexed(S) {
  extern Print_tex_form_no_automatic_subscript;
  if (Print_tex_form_no_automatic_subscript) {
    return([0,S]);
  }
  T = sub_str(S,0,0);
  T = strtoascii(T)[0];
  if (T >= 48 && T <= 57) return [0,S];
  T = strtoascii(S);
  N = length(T);
  P = 0; Q = 1;
  for (I=1 ; I<N; I++) {
    if (T[I] >= 48 && T[I] <=57) {
       if (P == 0) P = I; 
    }else{
       if (P) return [0,S];
    }
    if (T[I] == 95)  Q = 0; /* _ : no translate */
  }
  if (P && Q) {
    return [1,sub_str(S,0,P-1),sub_str(S,P,N-1)];
  }else{
    return [0,S];
  }
}


