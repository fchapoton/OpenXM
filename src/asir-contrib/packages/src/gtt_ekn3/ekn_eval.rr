def g_mat_fac_test_int(F,M_rat,S,E,Inc,Var){
  FF0=tk_nm_dn.nm_dn(F);
  FF=FF0[0];
  DD=FF0[1];
  MM=tk_nm_dn.nm_dn(M_rat);
  M=MM[0]; D=MM[1];
  if (Inc>0){
    for (I=S;I<=E; I+=Inc){
      FF=base_replace_n(M,[[Var,I]])*FF; 
      DD=substr2np(D,[[Var,I]])*DD;
    }
  }
  else if (Inc<0){
    for (I=S;I>=E; I+=Inc){
      FF=base_replace_n(M,[[Var,I]])*FF;
      DD=substr2np(D,[[Var,I]])*DD;
    }
  }else{
    return(F);
  }
  return(FF/DD);
}

