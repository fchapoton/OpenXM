def ann_heaviside(V,DV,LB,UB)
{
	L = [];
	for ( I = 0; I < length(LB); I++ ) {
		T = 1;
		if ( type(LB[I]) > 1 ) {
			if ( LB[I] != "-inf" )
				error("ann_heaviside: invalid lower bound.");
		} else
			T *= V[I]-LB[I];
		if ( type(UB[I]) > 1 ) { 
			if ( UB[I] != "inf" && UB[I] != "+inf" )
				error("ann_heaviside: invalid upper bound.");
		} else
			T *= V[I]-UB[I];
		L = cons(T*DV[I],L);
	}
	for ( ; I < length(V); I++ )
		L = cons(DV[I],L);
	return L;
} 

