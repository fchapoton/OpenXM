def ann_mul(Id1, Id2, VL, DVL)
{
	if (type(Param = getopt(param)) == -1) 
		Param = 0;
	if (type(S0 = getopt(s0)) == -1)
		S0 = -1;	

	VLL = map(dummy_var, VL);
