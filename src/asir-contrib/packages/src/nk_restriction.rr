/* 
 * 行列 A から多項式を生成               
 * p_to_mat(fano*(I)) が A 
 * ex. A = [[1,1,1],[-1,0,1],[0,1,-1]]
 *     F = x1*t1^-1 + x2*t2 + x3*t1*t2^-1 
 *     t1*t2*F = x1*t2  x2*t1*t2^2 + x3*t1^2 <-- これを返す
 */ 
def a_to_poly(A)
{
	M = size(A)[0];
	N = size(A)[1];
	XV = var_list("x", 1, N);
	TV = var_list("t", 1, M-1);	
	S = 0;
	V = newvect(M - 1);
	for (J = 0; J < N; J++) {
		for (I = 0; I < M - 1; I++) {
			V[I] = A[I + 1][J];
			V[I]++;
		}
		DPE = dp_vtoe(V);	
		E = dp_dtop(DPE, TV);
		S += E * XV[J];
	}
	VL = append(TV, XV);
	DXV = map(d_var, XV);
	DTV = map(d_var, TV);
	DVL = append(DTV, DXV);
	return [S, VL, DVL];
}

