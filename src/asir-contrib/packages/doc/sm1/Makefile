#$OpenXM: OpenXM/src/asir-contrib/packages/doc/sm1/Makefile,v 1.1 2005/04/13 23:50:17 takayama Exp $

# Name of this document.
MYNAME=sm1

SRC = sm1.oxw

ENSRCS = ${SRC:.oxw=.en} 
JASRCS = ${SRC:.oxw=.ja} 
ENAUTO= ${MYNAME}-auto.en
JAAUTO=${ENAUTO:.en=.ja}
GENTEXI_OPT=--noSorting --author "OpenXM.org" --infoName asir-contrib-${MYNAME}
include ../M/Makefile

clean_private: 
	${RM} -f ${MYNAME}-ja.texi ${MYNAME}-en.texi

${MYNAME}-ja.texi: ${MYNAME}.oxg
	@echo "Sm1 OX Server =?ISO-2022-JP?B?GyRCJV4lSyVlJSIlaxsoQg==?= " >title.tmp
# generated by nkf -M
	${NKF} -j ${MYNAME}.oxg | ${OXWEAVE} usage-ja | ${OXGENTEXI} ${GENTEXI_OPT} --title "`nkf -e title.tmp`" >${MYNAME}-ja.texi
	rm -f title.tmp

${MYNAME}-en.texi: ${MYNAME}.oxg
	${NKF} -j ${MYNAME}.oxg | ${OXWEAVE} usage-en | ${OXGENTEXI} ${GENTEXI_OPT} --title "Sm1 OX Server Manual" >${MYNAME}-en.texi

${MYNAME}-auto.en: ${CONTRIB}/${MYNAME}.rr
	${RM} -f ${MYNAME}-auto.en
	${OXWEAVE} usage  <${CONTRIB}/${MYNAME}.rr | ${OXGENTEXI} --category sm1 --en --upnode "Top" ${OPTGENTEXI} >${MYNAME}-auto.en

${MYNAME}-auto.ja: ${CONTRIB}/${MYNAME}.rr
	${RM} -f ${MYNAME}-auto.ja
	${OXWEAVE} usage  <${CONTRIB}/${MYNAME}.rr | ${OXGENTEXI} --category sm1 --en --upnode "Top" ${OPTGENTEXI} >${MYNAME}-auto.ja
