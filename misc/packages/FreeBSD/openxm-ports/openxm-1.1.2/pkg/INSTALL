#!/bin/sh
# $OpenXM: OpenXM/misc/packages/FreeBSD/openxm-ports/openxm-1.1.2/pkg/INSTALL,v 1.1.1.1 2000/03/02 10:32:39 takayama Exp $
# If you change this, modify Makefile/ post-install, too.
echo "pkg/INSTALL script"
echo -n "PKG_PREFIX is "
echo $PKG_PREFIX
if [ $2 = "PRE-INSTALL" ] ; then
	(/bin/rm -rf $PKG_PREFIX/OpenXM ; mkdir -f $PKG_PREFIX/OpenXM ; mkdir -f $PKG_PREFIX/OpenXM/lib ; mkdir -f $PKG_PREFIX/OpenXM/lib/sm1 ; mkdir -f $PKG_PREFIX/OpenXM/lib/sm1/bin ) 
fi
if [ $2 = "POST-INSTALL" ] ; then
	(cd $PKG_PREFIX/OpenXM/rc ; make clean ; make install PREFIX=$PKG_PREFIX)
fi
