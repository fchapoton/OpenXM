#$OpenXM: OpenXM/doc/Makefile,v 1.3 2000/01/24 11:01:13 takayama Exp $
OXWEAVE=../src/kxx/oxweave
OW_FLAG=--recursive
all : install-doc-intro install-doc-spec

all-install: install-doc-intro   #alias
install-doc-intro: $(OXWEAVE) install-jp.txt  install-eg.txt

all-spec: install-doc-spec #alias
install-doc-spec :
	-(cd OpenXM-specs ; make all)

install-jp.txt : install.oxweave
	-rm -f install-jp.txt
	echo "DO NOT EDIT THIS FILE." >install-jp.txt
	$(OXWEAVE) $(OW_FLAG) jp C <install.oxweave >>install-jp.txt

install-eg.txt : install.oxweave
	-rm -f install-eg.txt
	echo "DO NOT EDIT THIS FILE." >install-eg.txt
	$(OXWEAVE) $(OW_FLAG) eg C <install.oxweave >>install-eg.txt

$(OXWEAVE) : $(OXWEAVE).c
	(cd ../src/kxx ; make oxweave)
